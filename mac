RED='\033[1;31m'
NC='\033[0m' # No Color

#--------------------------------------------------------------------
# Utilities
#--------------------------------------------------------------------

# Is the user running commands in sudo?
IS_SUDO=$(id -u)

#--------------------------------------------------------------------
# Functions
#--------------------------------------------------------------------

function spinner()
{
    local i sp n
    sp='/-\|'
    n=${#sp}
    printf ' '
    while sleep 0.1; do
        printf "%s\b" "${sp:i++%n:1}"
    done
}

