#--------------------------------------------------------------------
# Functions
#--------------------------------------------------------------------
function get_branch_data()
{
  (
    for b in `git branch | sed 's:^[ *]*::'`; do
        git log -n 1 $b  --pretty="format:%ct|%ci" -- |
          sed "s^\(.*\)|\(.*\)$^\1|${b}|\2^"
    done
  )
}

